{% extends 'base.html.twig' %}

{% block title %}Edit Message{% endblock %}

{% block body %}
    

    {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row justify-content-center">
            <div class="col-5"> 
                <fieldset>
                    <h1>Contact</h1>
                    <div class="form-group row mb-2">
                        <label class="col-sm-2 col-form-label">{{ field_label(form.name) }}</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="{{ field_name(form.name) }}" value="{{ field_value(form.name) }}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label" >{{ field_label(form.mail) }}</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="staticEmail" name="{{ field_name(form.mail) }}" value="{{ field_value(form.mail) }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea" class="form-label mt-4">{{ field_label(form.message) }}</label>
                        <textarea class="form-control" id="exampleTextarea" rows="3" name="{{ field_name(form.message) }}" value="{{ field_value(form.message) }}"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </fieldset>
            </div>
        </div>
    {# {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button> #}
    {{ form_end(form) }}

{% endblock %}